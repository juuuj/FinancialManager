
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/CSS/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/CSS/materialize.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/materialize.min.css" rel="stylesheet" type="text/css" />
    <script src="jquery-3.3.1.min.js"></script>
    <script src="~/JS/materialize.js"></script>
    <script src="~/JS/materialize.min.js"></script>
    <script type="text/javascript">
        $(".dropdown-trigger").dropdown();
    </script>
    <style>
        .frmLogin {
            margin-left: 580px;
            background-color: #e1f5fe;
            border-radius: 30px;
            height: 500px;
            width: 500px;
            position: center;
            padding-left: 10px;
            padding-right: 10px;
        }
    </style>
</head>
<body>
    <div>
        <nav>
            <div class="nav-wrapper  blue lighten-3">
                <a href="#!" class="brand-logo">JuPak Gestões</a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="/Home">Home</a></li>
                    <li><a href="/Empresa/Contato">Contato</a></li>
                    <li><a href="/Login">Login</a></li>
                    <li><a href="/Empresa/Form">Cadastro</a></li>
                    <li><a href="/Empresa/Bastidores">Bastidores</a></li>
                </ul>
            </div>
        </nav>
        <br><br>
        <div class="frmLogin">
            <br><br>
            <div class="row">
                <center><h4>Login</h4></center>
            </div>
            <div class="row">
                <form class="col s12" action="/Login/AutenticaLogin">
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="nomeEmpresa" name="loginEmpresa" type="text" class="validate" required>
                            <label for="valor">Empresa</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="senha" name="senhaEmpresa" type="Password" class="validate" required>
                            <label for="valor">Senha</label>
                        </div>
                    </div>
                    <center>
                        <div class="input-field col s12">
                            <button id="btnSubmit" class="btn waves-effect waves-light  blue darken-3" type="submit" name="action">
                                Entrar
                                <i class="material-icons right">send</i>
                            </button>

                        </div>
                    </center>
                </form>
            </div>
        </div>
        <br /> <br />
        <footer class="page-footer blue lighten-3">
            <div class="container">
                <div class="row">
                    <div class="col l6 s12">
                        <h5 class="white-text">Gestão Financeira</h5>
                        <p class="grey-text text-lighten-4"> O melhor site para você ter controle de suas contas empresariais </p>
                    </div>
                    <div class="col l4 offset-l2 s12">
                        <h5 class="white-text">Páginas</h5>
                        <ul>
                            <li><a class="grey-text text-lighten-3" href="/Home">Home</a></li>
                            <li><a class="grey-text text-lighten-3" href="/Empresa/Contato">Contato</a></li>
                            <li><a class="grey-text text-lighten-3" href="/Login">Login</a></li>
                            <li><a class="grey-text text-lighten-3" href="/Empresa/Form">Cadastro</a></li>
                            <li><a class="grey-text text-lighten-3" href="/Empresa/Bastidores">Bastidores</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer-copyright">
                <div class="container">
                    © 2019 Copyright Text
                    <a class="grey-text text-lighten-4 right" href="#!">Mais...</a>
                </div>
            </div>
        </footer>
    </div>
   
</body>
</html>
